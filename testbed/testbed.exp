set timeout 5
set data_dir "data"
set tmp_dir "/tmp/dscuss.testdata"

proc prepare {} {
    global data_dir
    global tmp_dir
    file copy "$data_dir" "$tmp_dir"
}

proc cleanup {} {
    global tmp_dir
    file delete -force "$tmp_dir"
}

proc fail {} {
	puts "\n*** TEST FAILED ***"
        cleanup
        exit 1
}

proc pass {} {
	puts "\n*** TEST PASSED ***"
        cleanup
        exit 0
}

expect_before {
    timeout { fail }
}

prepare
