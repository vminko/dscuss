source testbed.exp

say "Starting Adam's peer"
spawn ../main -config "$tmp_dir/1"
set adam_id $spawn_id
expect "Welcome to Dscuss.\r\n"
send "login adam\r"
send "whoami\r"
expect -re "adam (.*)\r\n"

say "Starting Eve's peer"
spawn ../main -config "$tmp_dir/2"
set eve_id $spawn_id
expect "Welcome to Dscuss.\r\n"
send "login eve\r"
send "whoami\r"
expect -re "eve (.*)\r\n"

say "Giving peers some time to perform handshaking"
# Default timeout may be not enough for discovering both
# associated addresses
sleep 10

say "Checking whether peers see each other"
set spawn_id $adam_id
send "lspeers full\r"
expect "There is one connected peer:\r\n"
expect "PEER #0\r\n"
expect -re "Nickname:\\s+eve\r\n"
expect -re "ID:\\s+jNhpT2bYG/YQR3Dejo69mREhcXVWt0jnx1fE8r1ql7E=\r\n"
expect -re "LocalAddr:\\s+127.0.0.1:\\d+\r\n"
expect -re "RemoteAddr:\\s+127.0.0.1:\\d+\r\n"
expect -re "AssociatedAddrs:\\s+127.0.0.1:\\d+,127.0.0.1:\\d+\r\n"
expect -re "Subscriptions:\\s+dscuss,devel\r\n"
expect -re "\\s+photography,portrait\r\n"
expect -re "\\s+vintage,computer\r\n"
expect -re "State:\\s+Idle\r\n"
expect ">"
set spawn_id $eve_id
send "lspeers full\r"
expect "There is one connected peer:\r\n"
expect "PEER #0\r\n"
expect -re "Nickname:\\s+adam\r\n"
expect -re "ID:\\s+8vBHkCKnH/QiLeN8cXduVLG8BGfAMkiFtwKELEH3Gyc=\r\n"
expect -re "LocalAddr:\\s+127.0.0.1:\\d+\r\n"
expect -re "RemoteAddr:\\s+127.0.0.1:\\d+\r\n"
expect -re "AssociatedAddrs:\\s+127.0.0.1:\\d+,127.0.0.1:\\d+\r\n"
expect -re "Subscriptions:\\s+dscuss,devel\r\n"
expect -re "\\s+photography,landscape\r\n"
expect -re "\\s+vintage,handheld,computer\r\n"
expect -re "State:\\s+Idle\r\n"
expect ">"

say "Stopping all peers"
set spawn_id $adam_id
send "exit\r"
expect eof
wait
set spawn_id $eve_id
send "exit\r"
expect eof
wait
pass
